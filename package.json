{
	"name": "react-grid-calendar",
	"version": "1.0.0",
	"description": "A simple calendar built with React, Typescript, and using css-grid",
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"scripts": {
		"dist": "rm -rf dist && NODE_ENV=production babel ./src --out-dir dist --copy-files --extensions .ts,.tsx",
		"build": "npm run compile-scss && npm run build:esm && npm run build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs",
		"compile-scss": "npm run compile-scss:cjs && npm run compile-scss:esm",
		"compile-scss:cjs": "sass src/styles/index.scss:lib/cjs/styles/index.css",
		"compile-scss:esm": "sass src/styles/index.scss:lib/esm/styles/index.css",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/serezhascream/react-grid-calendar.git"
	},
	"keywords": [
		"react",
		"calendar",
		"css-grid"
	],
	"author": "Sergei Matiushenko",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/serezhascream/react-grid-calendar/issues"
	},
	"homepage": "https://github.com/serezhascream/react-grid-calendar#readme",
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.15.0",
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-react": "^7.14.5",
		"@babel/preset-typescript": "^7.15.0",
		"@jest/globals": "^27.0.6",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.0.0",
		"@testing-library/user-event": "^13.2.1",
		"@types/jest": "^27.0.1",
		"@types/react": "^17.0.19",
		"@types/react-dom": "^17.0.9",
		"jest": "^27.0.6",
		"jest-css-modules-transform": "^4.3.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"sass": "^1.38.0",
		"ts-jest": "^27.0.5",
		"typescript": "^4.3.5"
	},
	"peerDependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"classnames": "^2.3.1"
	}
}
